    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .cart {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .product {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .image img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            margin-right: 10px;
        }

        .info {
            flex: 1;
           
        }
        .info p{
                padding: 0px;
                line-height: 10px;
        }

        .price {
            color: #555;
        }

        .remove {
            background-color: transparent;
            border: none;
            cursor: pointer;
            color: red;
        }

            .remove:hover {
                text-decoration: underline;
            }

        .total {
            margin-top: 20px;
        }

            .total p {
                margin-bottom: 10px;
            }

            .total button {
                background-color: #007bff;
                color: #fff;
                border: none;
                padding: 10px 20px;
                cursor: pointer;
                border-radius: 5px;
            }

                .total button:hover {
                    background-color: #0056b3;
                }


    </style>
        
</head>
