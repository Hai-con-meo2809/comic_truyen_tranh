@model Book
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết sách - Nhà xuất bản Kim Đồng</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

    <link href="~/icomoon/icomoon.css" rel="stylesheet" />
    <link href="~/css/vendor.css" rel="stylesheet" />
    <link href="~/css/normalize.css" rel="stylesheet" />
    @*   <link href="~/css/style.css" rel="stylesheet" /> *@
    <link href="~/css/details.css" rel="stylesheet" />
    <style>
    </style>
</head>
<body>



    <div class="container">


        <div class="book-details">
            <div class="book-cover">
                <img src="@Model.ImageUrl" alt="Book Cover">
            </div>
            <div class="book-info">
                <h1 class="book-title">DORAEMON TÌM HIỂU XÃ HỘI - CÁC QUỐC KỲ TRÊN THẾ GIỚIi</h1>
                <div class="ratingvsfa">
                    <div class="rating">
                        <span class="star" data-value="1">&#9734;</span>
                        <span class="star" data-value="2">&#9734;</span>
                        <span class="star" data-value="3">&#9734;</span>
                        <span class="star" data-value="4">&#9734;</span>
                        <span class="star" data-value="5">&#9734;</span>
                    </div>  
                    <span class="wishlist wishlist-btns">
                        <i class="fa fa-heart-o"></i>
                    </span>
                </div>
                <p class="price">58,500₫ <span class="original-price">65,000₫</span></p>
                <div class="description">
                    <p class="description-heading">Mô tả sách:s</p>
                    <p class="description-content">Cái cực kỳ vui nhộn này có những hình ảnh bự và màu sắc sáng tạo, giúp bé tìm hiểu về các quốc kỳ trên thế giới.</p>
                </div>
                <div class="details">
                    <p><strong>Mã Kim Đồng:</strong> 6242300010009</p>
                    <p><strong>ISBN:</strong> 978-604-2-37274-9</p>
                    <p><strong>Tác giả:</strong> Fujiko F Fujio</p>
                    <p><strong>Độ tuổi:</strong> Nhí đồng (6 - 11)</p>
                    <p><strong>Khổ sách:</strong> 13x18 cm</p>
                    <p><strong>Số trang:</strong> 160</p>
                    <p><strong>Định dạng:</strong> Bìa mềm</p>
                    <p><strong>Trọng lượng:</strong> 170 gram</p>
                </div>
                <form method="post">
                <div class="actions">
                    <div class="quantity">
                        <label for="quantity">Số lượng:</label>
                        <div class="input-group">
                            <button class="quantity-minus">-</button>
                            <input type="number" id="quantity" name="quantity" min="1" value="1">
                            <button class="quantity-plus">+</button>
                        </div>
                    </div>
                   
                        <button asp-controller="Home" asp-action="Cart" asp-route-masach="@Model.Masach" class="add-to-cart"> <i class="fa fa-shopping-cart"></i> THÊM VÀO GIỎ HÀNG</button>
                        <button type="submit" class="buy-now">MUA NGAY</button>
                    </form>
                </div>
            </div>

        </div>




        <div class="review-container">
            <div class="review-text">
                Đánh giá sản phẩm
                <div class="rating-container">
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9734;</span>
                </div>
            </div>
            <div class="input-group">
                <input type="text" id="name" name="name" placeholder="Tên">
            </div>
            <div class="input-group">
                <input type="email" id="email" name="email" placeholder="Email">
            </div>
            <div class="input-group">
                <input type="tel" id="phone" name="phone" placeholder="Số điện thoại">
            </div>
            <div class="input-group">
                <textarea id="content" name="content" rows="4" placeholder="Nội dung"></textarea>
            </div>
            <button type="submit">Gửi đánh giá</button>
        </div>
        <a href="#" id="myLink">Chuyển hướng</a>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const stars = document.querySelectorAll(".star");
            const wishlistHeart = document.querySelector(".wishlist-btn");

            stars.forEach((star, index) => {
                star.addEventListener("mouseover", function () {
                    stars.forEach((s, i) => {
                        if (i <= index) {
                            s.classList.add("active");
                        } else {
                            s.classList.remove("active");
                        }
                    });
                });

                star.addEventListener("mouseout", function () {
                    stars.forEach(s => {
                        s.classList.remove("active");
                    });
                });

                star.addEventListener("click", function () {
                    alert("Bạn đã đánh giá " + (index + 1) + " sao.");
                });
            });

            wishlistHeart.addEventListener("mouseover", function () {
                wishlistHeart.style.color = "#e74c3c";
            });

            wishlistHeart.addEventListener("mouseout", function () {
                wishlistHeart.style.color = "#000";
            });
        });



    </script>

</body>
</html>







